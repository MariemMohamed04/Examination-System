
@{
    ViewData["Title"] = "Report 04";
    Layout = "~/Views/Shared/_AdminBoardLayout.cshtml";
    SelectList coursesLst = new SelectList(ViewBag.Courses, "CourseId", "CrsName");

}

<div id="content" class="p-4 p-md-5 pt-5">
    <div class="content-wrapper">
        <!-- Content Header (Page header) ------>
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#" class="text-secondary">Home</a></li>
                            <li class="breadcrumb-item active">Report 04</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content mb-3">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Report 04 <p class="h5">(select Course to See its Topics </p> </h3>
                </div>
                <div class="card-body p-1">
                    <form asp-action="GetTopicsByCourse" asp-controller="Reports" method="post">

                        @* <label for="Id">Enter Course Id </label>
                        <input name="Id" class="form-control"><br><br> *@
                        <select name="Id" asp-items="coursesLst" class="form-control">
                            <option>--- Select Course ---</option>
                        </select>

                        <input type="submit" value="Show Report 4" class="btn btn-success m-1">
                        <br><br>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </section>

        <!-- /.content -->
    </div>
</div>

