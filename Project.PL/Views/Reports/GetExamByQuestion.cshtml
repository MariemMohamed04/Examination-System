@model IEnumerable<Question>

@{
    ViewData["Title"] = "Report 5";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!--  Font Awesome Icon Library  -->
    <!--  Font Awesome Icon Library  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <!--  Bootstrap Framework  -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--  Main Style sheet  -->
    <link rel="stylesheet" href="~/css/Style.css" />
</head>

<body>
    <nav class="navbar navbar-expand-lg shadow-lg position-relative">
        <div class="container">
            <a class="navbar-brand text-white fw-bolder" href="#">Examination System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <button class="btn bg-white ms-auto" type="submit">Logout</button>
            </div>
        </div>
    </nav>


    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#" class="text-secondary">Questions</a></li>
                        <li class="breadcrumb-item active">choices</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <section class="exam mt-5 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row justify-content-center">




                @{
                    int i = 1;
                }
                @foreach (var ques in Model)
                {

                    <div class="col-8">
                        <div class="card mb-5">

                            <div class="card-header py-3 fs-5 fw-bold">
                                @i: @ques.QuestionText
                            </div>

                            <ul class="list-group list-group-flush">
                                @foreach (var choice in @ques.Choices)
                                {
                                    <li class="list-group-item">
                                        <div class="form-check py-2">

                                            <label class="form-check-label" for="flexRadioDefault1">@choice.ChoiceTxt</label>
                                        </div>
                                    </li>

                                }

                            </ul>
                        </div>
                    </div>
                    i++;
                }
            </div>
        </div>
    </section>
</body>

</html>




