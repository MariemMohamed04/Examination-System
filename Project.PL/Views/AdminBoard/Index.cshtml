
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminBoardLayout.cshtml";
}

<div id="content" class="p-4 p-md-5 pt-5">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#" class="text-secondary">Home</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <section class="content mb-3">
            <div class="container">
                @if (User.IsInRole("Admin"))
                {
                    <div class="row mb-5">
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Branch</h5>
                                    <a asp-area="" asp-controller="Branch" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Department</h5>
                                    <a asp-area="" asp-controller="Department" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Course</h5>
                                    <a asp-area="" asp-controller="Course" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Topic</h5>
                                    <a asp-area="" asp-controller="Topic" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Student</h5>
                                    <a asp-area="" asp-controller="Student" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Instructor</h5>
                                    <a asp-area="" asp-controller="Instructor" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Users</h5>
                                    <a asp-area="" asp-controller="Users" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Roles</h5>
                                    <a asp-area="" asp-controller="Roles" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (User.IsInRole("Instructor"))
                {
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Exam</h5>
                                    <a asp-area="" asp-controller="Exam" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">Questions</h5>
                                    <a asp-area="" asp-controller="Question" asp-action="Index" class="btn btn-danger">Go</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>

