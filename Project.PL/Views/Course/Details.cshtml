@model Course
@{
    ViewData["Title"] = "topic Details";
    Layout = "~/Views/Shared/_AdminBoardLayout.cshtml";


}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        <h3>@TempData["Message"]</h3>
    </div>
}

<div id="content" class="p-4 p-md-5 pt-5">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#" class="text-secondary">Home</a></li>
                            <li class="breadcrumb-item active">topic Details</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content mb-3">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">topic Details</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="@Model.CourseId" class="col-form-label"></label>
                                    <input asp-for="@Model.CourseId" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="@Model.CrsName" class="col-form-label"></label>
                                    <input asp-for="@Model.CrsName" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <label >Topics</label>
                                    @if (Model.Topics !=null && Model.Topics.Count > 0)
                                    {
                                        @foreach (var topic in Model.Topics)
                                        {


                                            <input asp-for="@topic.TopicName" class="form-control" readonly />
                                        }
                                    }
                                    else
                                    {
                                        <input value="no topics yet" class="form-control" readonly />
                                    }
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            <!-- /.card-body -->
    </div>
    <!-- /.card -->
    </section>
    <!-- /.content -->
</div>