@model List<Course>
@{
    ViewData["Title"] = "Choose Exam";
    Layout = "~/Views/Shared/_StudentBoardLayout.cshtml";
    var Courses = new SelectList(Model, "CourseId", "CrsName");
}

    <div class="col-8">
        <div class="card mb-5">
            <div class="card-header">
                Choose a Course to Start your Exam
            </div>
            <div class="card-body">
            <form class="d-flex flex-column align-items-center" asp-action="StudentMain" asp-controller="StartExam" method="post">
                <select class="form-select col-12 py-2 mb-3" aria-label="Default select example" placeholder="Select Course Exam" name="CourseId">
                    @if (Model?.Count() == 0)
                    {
                        <option>You Done All Exams Succesfully</option>
                    }
                    @foreach (var item in Model)
                    {
                        <option  value="@item.CourseId">@item.CrsName</option>
                    } 
                </select>
            <div class="col-12 ">
                <button class="btn bg-danger text-white ms-auto w-100 fw-bolder" type="submit">START YOUR EXAM</button>
            </div>
            <input name="StudentId" value="@ViewBag.StudentId" hidden/>
        </form>
            </div>
        </div>
    </div>
