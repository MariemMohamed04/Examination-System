@model CrsInstViewModel
@{
    var Courses = new SelectList(ViewBag.Courses, "CourseId", "CrsName");
    var Instructors = new SelectList(ViewBag.Instructors, "InstructorId", "Name");
}

<div class="card-body p-0">
    <div class="card card-primary">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="@Model.CourseId">Course</label>
                <select asp-for="@Model.CourseId" asp-items="Courses" class="form-control">
                    <option>--- Select Course ---</option>
                </select>
                <span asp-validation-for="@Model.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.InstructorId">Instructor</label>
                <select asp-for="@Model.InstructorId" asp-items="Instructors" class="form-control">
                    <option>--- Select instructor ---</option>
                </select>
                <span asp-validation-for="@Model.InstructorId" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}