@model IEnumerable<CrsDeptViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminBoardLayout.cshtml";
}

<div id="content" class="p-4 p-md-5 pt-5">
    <div class="content-wrapper">
        <!-- Content Header (Page header) ------>
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#" class="text-secondary">Home</a></li>
                            <li class="breadcrumb-item active">Course Department</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <form class="my-3" asp-action="Index" asp-controller="CrsDept">
            <div class="row">
                <div class="col-sm-8">
                    <input placeholder="Search By Name" name="SearchValue" class="form-control" />
                </div>
                <div class="col-sm-4">
                    <input type="submit" value="Search" class="btn btn-success btn-block" />
                </div>
            </div>
        </form>

        <!-- Main content -->
        <section class="content mb-3">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Course Department</h3>
                </div>
                <div class="card-body p-0">
                    @if (Model?.Count() > 0)
                    {
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 20%">
                                        @Html.DisplayNameFor(M => M.CourseId)
                                    </th>
                                    <th style="width: 20%">
                                        @Html.DisplayNameFor(M => M.DepartmentId)
                                    </th>
                                    <th style="width: 20%">
                                    </th>
                                    <th style="width: 1%" class="text-center">
                                    </th>
                                    <th style="width: 30%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.CourseId
                                        </td>
                                        <td>
                                            @item.DepartmentId
                                        </td>
                                        <td class="project_progress">
                                        </td>
                                        <td class="project-state">
                                        </td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-primary btn-sm"
                                               asp-action="Details"
                                               asp-route-crsId="@item.CourseId"
                                               asp-route-deptId="@item.DepartmentId">
                                                <i class="fas fa-folder"></i>
                                                View
                                            </a>
@*                                             <a class="btn btn-info btn-sm"
                                               asp-action="Update"
                                               asp-route-crsId="@item.CourseId"
                                               asp-route-deptId="@item.DepartmentId">
                                                <i class="fas fa-pencil-alt"></i>
                                                Edit
                                            </a> *@

                                            <a class="btn btn-danger btn-sm"
                                               asp-action="Delete"
                                               asp-route-crsId="@item.CourseId"
                                               asp-route-deptId="@item.DepartmentId">
                                                <i class="fas fa-trash"></i>
                                                Delete
                                            </a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h4>No Course Department Found!!</h4>
                        </div>
                    }
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </section>
        <div class="row">
            <div class="col-12">
                <a asp-action="Create" class="btn btn-success float-right">Create new Course Department</a>
            </div>
        </div>
        <!-- /.content -->
    </div>
</div>



