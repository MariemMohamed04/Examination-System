@model CrsDeptViewModel
@{
    var Courses = new SelectList(ViewBag.Courses, "CourseId", "CrsName");
    var Departments = new SelectList(ViewBag.Departments, "DepartmentId", "DeptName");
}

<div class="card-body p-0">
    <div class="card card-primary">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="@Model.CourseId">Course</label>
                <select asp-for="@Model.CourseId" asp-items="Courses" class="form-control">
                    <option>--- Select Course ---</option>
                </select>
                <span asp-validation-for="@Model.CourseId" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="@Model.DepartmentId">Department</label>
                <select asp-for="@Model.DepartmentId" asp-items="Departments" class="form-control">
                    <option>--- Select Manager ---</option>
                </select>
                <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}