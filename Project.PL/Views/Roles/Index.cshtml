@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminBoardLayout.cshtml";
}

<div id="content" class="p-4 p-md-5 pt-5">
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#" class="text-secondary">Home</a></li>
                            <li class="breadcrumb-item active">Roles</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content mb-3">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Roles</h3>
                </div>
                <div class="card-body p-0">
                    @if (Model?.Count() > 0)
                    {
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 10%">
                                        @Html.DisplayNameFor(M => M.Id)
                                    </th>
                                    <th style="width: 20%">
                                        @Html.DisplayNameFor(M => M.Name)
                                    </th>
                                    <th style="width: 30%">
                                    </th>
                                    <th>

                                    </th>
                                    <th style="width: 8%" class="text-center">
                                    </th>
                                    <th style="width: 28%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                        </td>
                                        <td class="project_progress">
                                            <a class="btn btn-secondary btn-sm" asp-action="AddOrRemove" asp-route-roleId="@item.Id">
                                                <i class="fas fa-folder">
                                                </i>
                                                Add Role To User
                                            </a>
                                        </td>
                                        <td class="project-state">
                                        </td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fas fa-folder">
                                                </i>
                                                View
                                            </a>
                                            <a class="btn btn-info btn-sm" asp-action="Update" asp-route-id="@item.Id">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Edit
                                            </a>
                                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="fas fa-trash">
                                                </i>
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h4>No Roles Found!!</h4>
                        </div>
                    }
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </section>
        <div class="row">
            <div class="col-12">
                <a asp-action="Create" class="btn btn-success float-right">Create new Role</a>
            </div>
        </div>
        <!-- /.content -->
    </div>
</div>

