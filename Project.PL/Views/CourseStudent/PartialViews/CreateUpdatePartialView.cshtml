@model CrsStudentViewModel
@{
    var Courses = new SelectList(ViewBag.Courses, "CourseId", "CrsName");
    var Students = new SelectList(ViewBag.Student, "StudentId", "Name");
}

<div class="card-body p-0">
    <div class="card card-primary">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="@Model.CourseId">Course</label>
                <select asp-for="@Model.CourseId" asp-items="Courses" class="form-control">
                    <option>--- Select Course ---</option>
                </select>
                <span asp-validation-for="@Model.CourseId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.StudentId">Student</label>
                <select asp-for="@Model.StudentId" asp-items="Students" class="form-control">
                    <option>--- Select Student ---</option>
                </select>
                <span asp-validation-for="@Model.StudentId" class="text-danger"></span>
            </div>

        </div>
        <!-- /.card-body -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}